{
  "name": "simple-spreadsheet",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "scripts": {
    "test": "jest --watchAll",
    "build": "rollup -c --watch",
    "build:prod": "rollup -c"
  },
  "author": "David Dostal",
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.13.8",
    "eslint": "^7.23.0",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "rollup": "^2.44.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/spreadsheet/*.js",
      "src/functions/*.js"
    ],
    "coverageDirectory": "./.coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "clover"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  }
}

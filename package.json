{
  "name": "simple-spreadsheet",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "scripts": {
    "dev": "rollup -c --watch",
    "build": "rollup -c",
    "test:watch": "jest --watchAll",
    "test": "jest"
  },
  "author": "David Dostal",
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.21.5",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "jest-cli": "^29.5.0",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/spreadsheet/*.js",
      "src/functions/*.js"
    ],
    "coverageDirectory": "./.coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "clover"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  }
}
